  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Buy this game</title>
</head>
<body>
  <%- include('partials/_header') %>

  <img width="300" src=<%= game.photo %> >
  <table>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
    </tr>
    <tr>
      <td><%= game.title %></td>
      <td><%= game.description %></td>
      <td>$<%= game.cost/100 %></td>
      <td>
        <form method="POST" action="/favorites">
        <input type="hidden" name="gameID" value="<%= game.id %>">

        <button type="submit" id="submit-favorite"><i class="fa fa-heart"></i></button>

        </form>
      </td>
    </tr>
  </table>

  <form method="POST" action="/favorites">

  </form>


  <div class="message-form">
    <form method="POST" action="/messages/<%= game.id%>">
      <input name ='text' placeholder="Write your message here"></input>
      <button type="submit" class="btn btn-light">Send message</button>
    </form>
  </div>

</body>
</html>


